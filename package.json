{
  "name": "@dapplets/dapplet-extension",
  "version": "0.1.18",
  "description": "Adds controls to legacy web sites.",
  "main": "./lib/index.min.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build:extension": "webpack --config webpack.prod.js",
    "build:jslib": "webpack --config webpack.jslib.js && tsc -d --emitDeclarationOnly",
    "build": "npm run build:extension && npm run build:jslib",
    "dev": "webpack --config webpack.dev.js",
    "start": "webpack -w --config webpack.dev.js",
    "lint": "tslint 'src/**/*.{ts, tsx}'",
    "test": "echo \"Error: no test specified\"",
    "clean": "rm -rf ./build && rm -rf ./lib"
  },
  "devDependencies": {
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/chrome": "^0.0.104",
    "@types/qr-image": "^3.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/semver": "^6.2.0",
    "@walletconnect/browser": "^1.0.0-beta.47",
    "@walletconnect/web3-provider": "^1.0.0-beta.47",
    "chrome-extension-message-wrapper": "github:dapplets/chrome-extension-message-wrapper#error-handler",
    "cids": "^0.8.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.2",
    "ethers": "^4.0.47",
    "extensionizer": "^1.0.1",
    "fibers": "^4.0.2",
    "file-loader": "^5.0.2",
    "multihashes": "^0.4.19",
    "multihashing-async": "^0.8.1",
    "node-sass": "^4.13.1",
    "qr-image": "^3.2.0",
    "raw-loader": "^4.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "resolve-url-loader": "^3.1.1",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "semantic-release": "^17.0.7",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "semver": "^6.3.0",
    "simple-mapper": "^2.2.0",
    "style-loader": "^1.1.4",
    "styled-components": "^5.1.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-react": "^4.2.0",
    "typescript": "^3.8.3",
    "url-loader": "^3.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {},
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dapplets/dapplet-extension.git"
  },
  "keywords": [
    "dapplets",
    "extension",
    "ethereum"
  ],
  "author": "Dapplets Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dapplets/dapplet-extension/issues"
  },
  "homepage": "https://github.com/dapplets/dapplet-extension#readme",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npm run build:extension && cd build && zip -r dapplet-extension.zip *"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/dapplet-extension.zip",
              "label": "Browser Extension (zip)"
            },
            {
              "path": "lib/index.min.js",
              "label": "Pure JSLib for browser (js)"
            }
          ]
        }
      ]
    ]
  }
}
