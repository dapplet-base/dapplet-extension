{
  "name": "@dapplets/dapplet-extension",
  "version": "0.20.2",
  "description": "Adds controls to legacy web sites.",
  "main": "./lib/index.min.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build:extension": "webpack --config webpack.prod.js",
    "build:jslib": "webpack --config webpack.jslib.js && tsc -d --emitDeclarationOnly",
    "build": "npm run build:extension && npm run build:jslib",
    "dev": "webpack --config webpack.dev.js",
    "start": "webpack -w --config webpack.dev.js",
    "lint": "tslint 'src/**/*.{ts, tsx}'",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "clean": "rm -rf ./build && rm -rf ./lib"
  },
  "devDependencies": {
    "@rjsf/core": "^2.4.0",
    "@rjsf/semantic-ui": "^2.4.0",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/chai": "^4.2.12",
    "@types/chrome": "^0.0.126",
    "@types/mocha": "^8.0.3",
    "@types/puppeteer": "^3.0.2",
    "@types/qr-image": "^3.2.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/semver": "^7.3.3",
    "@walletconnect/client": "^1.3.1",
    "@walletconnect/web3-provider": "^1.3.1",
    "chai": "^4.2.0",
    "chrome-extension-message-wrapper": "github:dapplets/chrome-extension-message-wrapper",
    "copy-webpack-plugin": "^6.1.0",
    "css-loader": "^4.3.0",
    "ethereum-blockies-base64": "^1.0.2",
    "ethers": "^5.0.21",
    "fibers": "^5.0.0",
    "file-loader": "^6.1.0",
    "jszip": "^3.5.0",
    "metamask-extension-provider": "^2.0.0",
    "mocha": "^8.1.3",
    "node-sass": "^4.14.1",
    "puppeteer": "^5.3.0",
    "qr-image": "^3.2.0",
    "raw-loader": "^4.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-time-ago": "^6.2.1",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.2",
    "semantic-release": "^17.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.1",
    "semver": "^7.3.2",
    "simple-mapper": "^2.2.0",
    "style-loader": "^1.2.1",
    "styled-components": "^5.2.1",
    "topological-sort": "^0.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-react": "^5.0.0",
    "typescript": "^4.0.2",
    "url-loader": "^4.1.0",
    "webextension-polyfill-ts": "^0.19.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.1.4"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dapplets/dapplet-extension.git"
  },
  "keywords": [
    "dapplets",
    "extension",
    "ethereum"
  ],
  "author": "Dapplets Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dapplets/dapplet-extension/issues"
  },
  "homepage": "https://github.com/dapplets/dapplet-extension#readme",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npm run build:extension && cd build && zip -r dapplet-extension.zip *"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/dapplet-extension.zip",
              "label": "Browser Extension (zip)"
            },
            {
              "path": "lib/index.min.js",
              "label": "Pure JSLib for browser (js)"
            }
          ]
        }
      ]
    ]
  }
}
